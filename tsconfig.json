{
  "include": [
    "src",
    "index.d.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2020"],
    "allowJs": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop": true
  }
}
